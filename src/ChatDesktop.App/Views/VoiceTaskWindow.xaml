<Window x:Class="ChatDesktop.App.Views.VoiceTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="语音创建任务" Height="520" Width="520" WindowStartupLocation="CenterOwner">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0">
      <Button Content="开始录音" Command="{Binding StartRecordCommand}" Margin="0,0,8,0" />
      <Button Content="停止录音" Command="{Binding StopRecordCommand}" Margin="0,0,8,0" />
      <TextBlock Text="处理中..." Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </StackPanel>

    <ScrollViewer Grid.Row="1" Margin="0,12,0,12">
      <StackPanel>
        <TextBlock Text="识别文本" Margin="0,0,0,4" FontWeight="Bold" />
        <TextBox Text="{Binding Transcript}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />

        <TextBlock Text="任务标题" Margin="0,12,0,4" FontWeight="Bold" />
        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="任务描述" Margin="0,12,0,4" FontWeight="Bold" />
        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Height="120" TextWrapping="Wrap" AcceptsReturn="True" />

        <TextBlock Text="{Binding Error}" Foreground="#C62828" Margin="0,8,0,0"
                   Visibility="{Binding Error, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
      </StackPanel>
    </ScrollViewer>

    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
      <Button Content="取消" Command="{Binding CancelCommand}" Margin="0,0,8,0" />
      <Button Content="保存任务" Command="{Binding SaveCommand}" />
    </StackPanel>
  </Grid>
</Window>
