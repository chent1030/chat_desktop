<Window x:Class="ChatDesktop.App.Views.VoiceTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="语音创建任务" Height="560" Width="560" WindowStartupLocation="CenterOwner"
        Background="#F4F6FA">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0">
      <Button Style="{StaticResource MaterialDesignRaisedButton}" Content="开始录音" Command="{Binding StartRecordCommand}" Margin="0,0,8,0" />
      <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="停止录音" Command="{Binding StopRecordCommand}" Margin="0,0,8,0" />
      <TextBlock Text="处理中..." Foreground="#5C6BC0"
                 Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </StackPanel>

    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16" Margin="0,12,0,12"
            BorderBrush="#E6E9F0" BorderThickness="1"
            materialDesign:ShadowAssist.ShadowDepth="Depth1">
      <ScrollViewer>
        <StackPanel>
          <TextBox Text="{Binding Transcript}" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                   materialDesign:HintAssist.Hint="识别文本" />

          <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,12,0,0"
                   materialDesign:HintAssist.Hint="任务标题" />

          <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Height="140" Margin="0,12,0,0"
                   TextWrapping="Wrap" AcceptsReturn="True"
                   materialDesign:HintAssist.Hint="任务描述" />

          <TextBlock Text="{Binding Error}" Foreground="#C62828" Margin="0,8,0,0"
                     Visibility="{Binding Error, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
        </StackPanel>
      </ScrollViewer>
    </Border>

    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
      <Button Style="{StaticResource MaterialDesignFlatButton}" Content="取消" Command="{Binding CancelCommand}" Margin="0,0,8,0" />
      <Button Style="{StaticResource MaterialDesignRaisedButton}" Content="保存任务" Command="{Binding SaveCommand}" />
    </StackPanel>
  </Grid>
</Window>
