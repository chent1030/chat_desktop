<Window x:Class="ChatDesktop.App.Views.DateTimePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="选择日期时间" Height="300" Width="420" WindowStartupLocation="CenterOwner"
        Background="#F4F6FA"
        ResizeMode="NoResize"
        Language="zh-CN">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <TextBlock Text="请选择日期与时间" FontWeight="SemiBold" />

    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="12" Margin="0,12,0,0"
            BorderBrush="#E6E9F0" BorderThickness="1"
            materialDesign:ShadowAssist.ShadowDepth="Depth1">
      <StackPanel>
        <DatePicker x:Name="DatePicker" Language="zh-CN" />
        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
          <ComboBox x:Name="HourComboBox" Width="90" />
          <TextBlock Text=":" Margin="8,0" VerticalAlignment="Center" />
          <ComboBox x:Name="MinuteComboBox" Width="90" />
        </StackPanel>
      </StackPanel>
    </Border>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
      <Button Style="{StaticResource MaterialDesignFlatButton}" Content="清除" Width="80" Margin="0,0,8,0" Click="OnClearClicked" />
      <Button Style="{StaticResource MaterialDesignFlatButton}" Content="取消" Width="80" Margin="0,0,8,0" Click="OnCancelClicked" />
      <Button Style="{StaticResource MaterialDesignRaisedButton}" Content="确定" Width="80" Click="OnConfirmClicked" />
    </StackPanel>
  </Grid>
</Window>
